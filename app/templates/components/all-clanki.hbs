<div class="body">
  <div class="button-group">
    {{#each categories as |category|}}
      <label>
        <input type="radio" name="button-group" value={{category}}>
        {{#link-to 'clanki' (query-params category=category) classNameBindings=":category :button-group-item"}}
          {{capitalize-text category}}
        {{/link-to}}
      </label>
    {{/each}}
  </div>

  <section class="clanki">

    <div class="clanek clanek-first">
    </div>

    {{#each filteredClaneks as |clanek|}}
      {{clanek-item clanek=clanek}}
    {{/each}}

  </section>
</div>