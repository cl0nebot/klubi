<ul class="klub-list-inner fancy-scrollbar">
  <li class="klub-card">
    <div class="klub-card-inner klub-card-inner--search">
      {{input type="search" value=query class="klub-list-search" placeholder="Išči"}}
    </div>
  </li>
  {{#each klub in filteredKlubs}}
    {{klub-card klubId=klub.model.id name=klub.model.name town=klub.model.town isHovered=klub.isHovered}}
  {{/each}}
  {{#unless klubs}}
    <div class="loader">
      <div class="spinner-container">
        <div class="spinner"></div>
        <div class="spinner"></div>
        <div class="spinner"></div>
      </div>
    </div>
  {{/unless}}
</ul>
