<div class="klub_page-container {{if fullWidth 'klub_page-container--fullwidth'}} js-close">
  <article class="klub_page-article js-close" itemscope itemtype="http://schema.org/LocalBusiness">

    <ul class="fa-ul klub_page-item_list">
      <li class='klub_page-item'>
        <h1><span itemprop="name">{{name}}</span>{{unbound fa-icon "close" fixedWidth=true listItem=true classNames="klub_page-close_btn js-close" title="Zapri"}}</h1>
      </li>
      {{#if address}}
        <li class='klub_page-item'>
          <p itemprop="address">{{address}}</p>{{unbound fa-icon "map-marker" fixedWidth=true listItem=true}}
        </li>
      {{/if}}
      {{#if website}}
        <li class='klub_page-item'>
          <p><a itemprop="url" href={{website}}>Spletna stran</a></p>{{unbound fa-icon "external-link-square" fixedWidth=true listItem=true}}
        </li>
      {{/if}}
      {{#if facebookUrl}}
        <li class='klub_page-item'>
          <p><a itemprop="url" href={{facebookUrl}}>Facebook stran</a></p>{{unbound fa-icon "facebook" fixedWidth=true listItem=true}}
        </li>
      {{/if}}
      {{#if phone}}
        <li class='klub_page-item'>
          <p itemprop="telephone">{{phone}}</p>{{unbound fa-icon "phone" fixedWidth=true listItem=true}}
        </li>
      {{/if}}
      {{#if email}}
        <li class='klub_page-item'>
          <p itemprop="email">{{mail-to email}}</p>{{unbound fa-icon "envelope" fixedWidth=true listItem=true}}
        </li>
      {{/if}}
    </ul>
  </article>
  {{yield}}
</div>
