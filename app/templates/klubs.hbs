<div class="l-flex klubs-page">

  <div class="l-flex l-flex--vert map-and-klubpage">

    {{#leaflet-map center=markerCenter zoom=zoom minZoom="8" maxZoom="18" maxBounds=maxBounds zoomControl="false" onMoveend=(action "updateCenter")}}
      {{tile-layer url="https://a.tiles.mapbox.com/v3/foursquare.meku766r/{z}/{x}/{y}.png"}}
      {{#marker-cluster-layer maxClusterRadius="80" zoomToBoundsOnClick="true" spiderfyOnMaxZoom="true" removeOutsideVisibleBounds="false"}}


        {{#with themedIcon as |categoryIcon|}}
          {{#each filteredKlubs as |klub|}}
            {{#marker-layer location=klub.location icon=categoryIcon}}
              <h3>{{klub.name}}</h3>
              {{klub.categories}}<br>
              {{#link-to 'klubs.klub' klub}}Veƒç informacij{{/link-to}}
            {{/marker-layer}}
          {{/each}}
        {{/with}}
      {{/marker-cluster-layer}}
    {{/leaflet-map}}

    {{outlet}}
  </div>
  {{#unless anyKlub}}
    <div class="loader loader--klubs">
      <div class="spinner-container">
        <div class="spinner"></div>
        <div class="spinner"></div>
        <div class="spinner"></div>
      </div>
    </div>
  {{/unless}}
  {{recent-categories}}

  {{send-email-button}}
</div>

{{social-buttons isShowPage=isShowPage}}