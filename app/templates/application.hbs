
<div class="bodywrapper {{if isEmbeddedPage 'bodywrapper--embedded' }} {{if isSideNavVisible 'bodywrapper-hidden'}}">
  <div class="flashes-container">
    {{#if flashMessages}}
      {{#each flashMessages.queue as |flash|}}
        {{flash-message flash=flash}}
      {{/each}}
    {{/if}}
  </div>
  {{outlet}}
</div>

{{#if showMenus}}
  {{logo-button action="toggleSideNav"}}

  {{side-nav visible=isSideNavVisible}}

  <div class="social-buttons">
    <div class="fb-like" data-href="https://www.facebook.com/zatresi.si" data-width="225" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>
  </div>

  {{fade-screen visible=isSideNavVisible action="toggleSideNav"}}
{{/if}}


